<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.RegistroActivity">

    <LinearLayout
        android:padding="10dp"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textViewLogin"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/Registro"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#913737"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
    <TableRow>
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:hint="Documento"
            android:id="@+id/txtDocumento" />

    </TableRow>
    <TableRow>
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:hint="Nombre"
            android:id="@+id/txtNombre" />
    </TableRow>
    <TableRow>
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:hint="Edad"
            android:id="@+id/txtEdad" />

    </TableRow>
    <TableRow>
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:hint="Dirección"
            android:id="@+id/txtDireccion" />

    </TableRow>
    <TableRow>
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:hint="Teléfono"
            android:id="@+id/txtTelefono" />

    </TableRow>
    <TableRow>
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:hint="Materia #1"
            android:id="@+id/txtMateria1" />

        <EditText
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:hint="Nota #1"
            android:id="@+id/txtNota1" />

    </TableRow>
    <TableRow>
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:hint="Materia #2"
            android:id="@+id/txtMateria2" />

        <EditText
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:hint="Nota #2"
            android:id="@+id/txtNota2" />

    </TableRow>
    <TableRow>
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:hint="Materia #3"
            android:id="@+id/txtMateria3" />

        <EditText
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:hint="Nota #3"
            android:id="@+id/txtNota3" />

    </TableRow>
    <TableRow>
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:hint="Materia #4"
            android:id="@+id/txtMateria4" />

        <EditText
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:hint="Nota #4"
            android:id="@+id/txtNota4" />

    </TableRow>
    <TableRow>
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:hint="Materia #5"
            android:id="@+id/txtMateria5" />

        <EditText
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:hint="Nota #5"
            android:id="@+id/txtNota5" />

    </TableRow>
    <LinearLayout>
        android:padding="10dp"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:id="@+id/btnRegistrar"
            android:layout_gravity="center"/>
    </LinearLayout>

</TableLayout>